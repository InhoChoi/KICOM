<Window x:Class="kicom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kicom - Client" Height="350" Width="525"
        Closing="MainWindow_Closing" AllowsTransparency="True" ResizeMode="CanResize" MinWidth="500" WindowStyle="None" Background="#FF202020">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="GridTop" Grid.RowSpan="1" Background="White">

        </Grid>

        <Grid Grid.RowSpan="2">
            <ContentPresenter x:Name="PageView"/>
            <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="59,0,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
            <Image x:Name="MyView" HorizontalAlignment="Left" Height="217" Margin="82,102,0,0" VerticalAlignment="Top" Width="362"/>
        </Grid>

        <Rectangle Grid.RowSpan="2" x:Name="GripTop" Fill="#00000000" Stroke="{x:Null}" VerticalAlignment="Top" Height="5" PreviewMouseDown="Resize" Margin="10,0" Cursor="SizeNS"/>
        <Rectangle Grid.RowSpan="2" x:Name="GripBottom" Fill="#00000000" Stroke="{x:Null}" Height="5" VerticalAlignment="Bottom" PreviewMouseDown="Resize" Margin="10,0" Cursor="SizeNS"/>
        <Rectangle Grid.RowSpan="2" x:Name="GripLeft" Fill="#00000000" Stroke="{x:Null}" HorizontalAlignment="Left" Margin="0,10" Width="5" PreviewMouseDown="Resize" Cursor="SizeWE"/>
        <Rectangle Grid.RowSpan="2" x:Name="GripRight" Fill="#00000000" Stroke="{x:Null}" Margin="0,10" Width="5" HorizontalAlignment="Right" PreviewMouseDown="Resize" Cursor="SizeWE"/>
        <Rectangle Grid.RowSpan="2" x:Name="GripBottomLeft" Fill="#00000000" Stroke="{x:Null}" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="10" Height="10" PreviewMouseDown="Resize" Cursor="SizeNESW"/>
        <Rectangle Grid.RowSpan="2" x:Name="GripBottomRight" Fill="#00000000" Stroke="{x:Null}" VerticalAlignment="Bottom" Height="10" Width="10" HorizontalAlignment="Right" PreviewMouseDown="Resize" Cursor="SizeNWSE"/>
        <Rectangle Grid.RowSpan="2" x:Name="GripTopRight" Fill="#00000000" Stroke="{x:Null}" HorizontalAlignment="Right" Width="10" Height="10" VerticalAlignment="Top" PreviewMouseDown="Resize" Cursor="SizeNESW"/>
        <Rectangle Grid.RowSpan="2" x:Name="GripTopLeft" Fill="#00000000" Stroke="{x:Null}" HorizontalAlignment="Left" Width="10" VerticalAlignment="Top" Height="10" PreviewMouseLeftButtonDown="Resize" Cursor="SizeNWSE"/>
    </Grid>
</Window>
