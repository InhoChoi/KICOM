<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:kicom" 
    xmlns:Pages="clr-namespace:kicom.Pages" x:Class="kicom.MainWindow"
    Title="Kicom - Client" Height="350" Width="525"
    Closing="MainWindow_Closing" AllowsTransparency="True" ResizeMode="CanResize" MinWidth="600" MinHeight="300" WindowStyle="None" Background="#FF202020">
    <Window.Resources>
        <Style TargetType="{x:Type Image}">
            <Setter Property="SnapsToDevicePixels" Value="True" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 매뉴 바 -->
        <Grid x:Name="GridTop" Grid.RowSpan="1">
            <local:ImageButton Width="25" Height="25" HorizontalAlignment="Right" Margin="0,5,5,0" VerticalAlignment="Top" ImgDown="Resource/delete8.png" imgNormal="Resource/delete8.png" ImgOver="Resource/delete8.png" ImgDisabled="Resource/delete8.png" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="Close_Button"/>
            <local:ImageButton Width="25" Height="25" HorizontalAlignment="Right" Margin="0,5,40,0" VerticalAlignment="Top" ImgDown="Resource/expanding2.png" imgNormal="Resource/expanding2.png" ImgOver="Resource/expanding2.png" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="Max_Button"/>
            <!--<local:ImageButton Width="20" Height="20" HorizontalAlignment="Right" Margin="0,5,35,0" VerticalAlignment="Top" ImgDown="Resource/Download-64.png" imgNormal="Resource/Download-64.png" ImgOver="Resource/Download-64.png" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="Min_Button"/>-->
        </Grid>


        <!-- 본체 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40*"/>
                <ColumnDefinition Width="240*"/>
                <ColumnDefinition Width="40*"/>
                <ColumnDefinition Width="240*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid Grid.RowSpan="1" Margin="0.333,0,0,0" Grid.Column="1">
                <Viewbox HorizontalAlignment="Center" Margin="0,0,0,0">
                    <Image Source="{Binding ImageSource}" Stretch="UniformToFill" />
                </Viewbox>
            </Grid>
            <Grid Grid.RowSpan="2" Grid.ColumnSpan="4">
            </Grid>

        </Grid>

        <!-- 확장 툴 -->
        <Rectangle x:Name="GripTop" Fill="#00000000" Stroke="{x:Null}" VerticalAlignment="Top" Height="5" PreviewMouseDown="Resize" Margin="10,0" Cursor="SizeNS"/>
        <Rectangle x:Name="GripBottom" Fill="#00000000" Stroke="{x:Null}" Height="5" VerticalAlignment="Bottom" PreviewMouseDown="Resize" Margin="10,0" Cursor="SizeNS" Grid.Row="2"/>
        <Rectangle Grid.RowSpan="3" x:Name="GripLeft" Fill="#00000000" Stroke="{x:Null}" HorizontalAlignment="Left" Margin="0,10" Width="5" PreviewMouseDown="Resize" Cursor="SizeWE"/>
        <Rectangle Grid.RowSpan="3" x:Name="GripRight" Fill="#00000000" Stroke="{x:Null}" Margin="0,10" Width="5" HorizontalAlignment="Right" PreviewMouseDown="Resize" Cursor="SizeWE"/>
        <Rectangle x:Name="GripBottomLeft" Fill="#00000000" Stroke="{x:Null}" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="10" Height="10" PreviewMouseDown="Resize" Cursor="SizeNESW" Grid.Row="2"/>
        <Rectangle x:Name="GripBottomRight" Fill="#00000000" Stroke="{x:Null}" VerticalAlignment="Bottom" Height="10" Width="10" HorizontalAlignment="Right" PreviewMouseDown="Resize" Cursor="SizeNWSE" Grid.Row="2"/>
        <Rectangle x:Name="GripTopRight" Fill="#00000000" Stroke="{x:Null}" HorizontalAlignment="Right" Width="10" Height="10" VerticalAlignment="Top" PreviewMouseDown="Resize" Cursor="SizeNESW"/>
        <Rectangle x:Name="GripTopLeft" Fill="#00000000" Stroke="{x:Null}" HorizontalAlignment="Left" Width="10" VerticalAlignment="Top" Height="10" PreviewMouseLeftButtonDown="Resize" Cursor="SizeNWSE"/>
    </Grid>
</Window>
