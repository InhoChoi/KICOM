<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:kicom" 
    xmlns:Pages="clr-namespace:kicom.Pages" x:Class="kicom.MainWindow"
    Title="Kicom - Client" Height="350" Width="525"
    Closing="MainWindow_Closing" AllowsTransparency="True" ResizeMode="NoResize" MinWidth="800" MinHeight="400" WindowStyle="None" Background="#FF202020">
    <Window.Resources>
        <Style TargetType="{x:Type Image}">
            <Setter Property="SnapsToDevicePixels" Value="True" />
        </Style>
    </Window.Resources>
    <Grid>
        <Border BorderBrush="DodgerBlue" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 매뉴 바 -->
                <Grid x:Name="GridTop" Grid.RowSpan="1">
                    <local:ImageButton Width="25" Height="25" HorizontalAlignment="left" Margin="8,5" VerticalAlignment="Top" ImgDown="Resource/surveillance85 (1).png" imgNormal="Resource/surveillance85 (1).png" ImgOver="Resource/surveillance85 (1).png" ImgDisabled="Resource/surveillance85 (1).png" BorderBrush="{x:Null}" Foreground="{x:Null}"/>
                    <local:ImageButton Width="25" Height="25" HorizontalAlignment="Right" Margin="0,5,5,0" VerticalAlignment="Top" ImgDown="Resource/delete8.png" imgNormal="Resource/delete8.png" ImgOver="Resource/delete8.png" ImgDisabled="Resource/delete8.png" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="Close_Button"/>
                    <local:ImageButton Width="25" Height="25" HorizontalAlignment="Right" Margin="0,5,40,0" VerticalAlignment="Top" ImgDown="Resource/expanding2.png" imgNormal="Resource/expanding2.png" ImgOver="Resource/expanding2.png" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="Max_Button"/>
                    <Label HorizontalAlignment="Left" Margin="35, 0" Content="Kicom" FontSize="20" Foreground ="White" FontFamily="Microsoft JhengHei UI"/>
                    <Label HorizontalAlignment="Left" Margin="100,4,0,1" Content="- Smart DoorLock System" FontSize="16" Foreground ="DarkGray" FontFamily="Microsoft JhengHei UI Light"/>
                    <Button HorizontalAlignment="Left" Margin="350,4,0,1" Content="Register" FontSize="16"  FontFamily="Microsoft JhengHei UI Light" Click="Register_Click"/>
                    <!--<local:ImageButton Width="20" Height="20" HorizontalAlignment="Right" Margin="0,5,35,0" VerticalAlignment="Top" ImgDown="Resource/Download-64.png" imgNormal="Resource/Download-64.png" ImgOver="Resource/Download-64.png" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="Min_Button"/>-->
                </Grid>

                <!-- 본체 -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40*"/>
                        <ColumnDefinition Width="240*"/>
                        <ColumnDefinition Width="40*"/>
                        <ColumnDefinition Width="240*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.RowSpan="1" Margin="0,0,0,0" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="31*"/>
                            <RowDefinition Height="98*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Margin="0,0,0,0">
                            <Label Content="InterPhone - Door"  FontSize="25" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="-15,0,0,0" FontFamily="Microsoft JhengHei UI Light"/>
                            <Viewbox>
                                <Image Source="{Binding InterPhoneIcon}" Stretch="Fill"/>
                            </Viewbox>
                        </Grid>
                        <Grid Grid.Row="1"  Margin="0,0,0,0">
                            <Border Background="#FF2D2D2D" BorderBrush="DarkGray" BorderThickness="0.5" Grid.RowSpan="2">
                                <Viewbox HorizontalAlignment="Center" Margin="0,0,0,0">
                                    <Image Source="{Binding ImageSource}" Stretch="Uniform" />
                                </Viewbox>
                            </Border>
                        </Grid>
                    </Grid>
                    <Grid Grid.Column="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="107*"/>
                            <ColumnDefinition Width="21*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35*"/>
                            <RowDefinition Height="223*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Grid.Column="0">
                            <Label Content="History" Foreground="White" FontSize="20" />
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="0" Margin="0,0,0,0">
                            <local:History Margin="0,0,0,0" Grid.RowSpan="2" Grid.ColumnSpan="2" />
                        </Grid>
                    </Grid>
                    <Grid Grid.ColumnSpan="4" Grid.Row="1" Margin="0,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="4*"/>
                            <RowDefinition Height="3*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="1" Margin="0,0,0,0" >
                            <Canvas Background="DodgerBlue" />
                            <Label Content="스마트  도어락 시스템, 키콤이 동작 중입니다." VerticalAlignment="Center" Margin="10,0,0,0" Foreground="White" FontSize="8" FontFamily="Microsoft JhengHei UI"/>
                        </Grid>
                    </Grid>

                </Grid>

                <!-- 확장 툴 -->
                <Rectangle x:Name="GripTop" Fill="#00000000" Stroke="{x:Null}" VerticalAlignment="Top" Height="5" PreviewMouseDown="Resize" Margin="10,0" Cursor="SizeNS"/>
                <Rectangle x:Name="GripBottom" Fill="#00000000" Stroke="{x:Null}" Height="5" VerticalAlignment="Bottom" PreviewMouseDown="Resize" Margin="10,0" Cursor="SizeNS" Grid.Row="2"/>
                <Rectangle Grid.RowSpan="3" x:Name="GripLeft" Fill="#00000000" Stroke="{x:Null}" HorizontalAlignment="Left" Margin="0,10" Width="5" PreviewMouseDown="Resize" Cursor="SizeWE"/>
                <Rectangle Grid.RowSpan="3" x:Name="GripRight" Fill="#00000000" Stroke="{x:Null}" Margin="0,10" Width="5" HorizontalAlignment="Right" PreviewMouseDown="Resize" Cursor="SizeWE"/>
                <Rectangle x:Name="GripBottomLeft" Fill="#00000000" Stroke="{x:Null}" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="10" Height="10" PreviewMouseDown="Resize" Cursor="SizeNESW" Grid.Row="2"/>
                <Rectangle x:Name="GripBottomRight" Fill="#00000000" Stroke="{x:Null}" VerticalAlignment="Bottom" Height="10" Width="10" HorizontalAlignment="Right" PreviewMouseDown="Resize" Cursor="SizeNWSE" Grid.Row="2"/>
                <Rectangle x:Name="GripTopRight" Fill="#00000000" Stroke="{x:Null}" HorizontalAlignment="Right" Width="10" Height="10" VerticalAlignment="Top" PreviewMouseDown="Resize" Cursor="SizeNESW"/>
                <Rectangle x:Name="GripTopLeft" Fill="#00000000" Stroke="{x:Null}" HorizontalAlignment="Left" Width="10" VerticalAlignment="Top" Height="10" PreviewMouseLeftButtonDown="Resize" Cursor="SizeNWSE"/>
            </Grid>
        </Border>
    </Grid>
</Window>
